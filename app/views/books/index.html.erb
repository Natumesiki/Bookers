<!DOCTYPE>
<html lang="ja">

 <head>
   <meta charset="UTF-8">
   <title>Bookers</title>
   <link rel="stylesheet" href="/assets/books.scss">

 </head>

<h1>books</h1>
<% @books.each do |book|%>

<table>
<thead>

<tr>
 <th>Title</th>
 <th>Body</th>

 <th colspan="3"></th>
</tr>

</thead>

<tbody>
 <tr>
 <tb><span><%= book.title %></span></tb>
 <tb><span><%= book.body %></span></tb>

 <tb><span><%= link_to "show", book_path(book.id) %></span></tb>

 <tb><span><%= link_to "Edit", edit_book_path(book.id) %></span></tb>

 <tb><span><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %></span></tb>

 </tr>
 <%end%>

</tbody>
</table>


<div class="new">
<h2>New book</h2>
<%= form_with model: @book,url:'/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book'%>
</div>

<%end%>



